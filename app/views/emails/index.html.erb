<div class="container-fluid pt-0">

  <%= button_to "Get an email", emails_path,:class => "btn btn-outline-primary mb-3 mt-4", remote: true, :method => :post %>

  <div class="row">
    <div class="col-md-4">
      <table class="table table-striped table-sm">
        <thead class="thead-dark">
          <tr>
            <th scope="col" class = 'text-center' style="width: 5%">#</th>
            <th scope="col" class = 'text-left' style="width: 95%">My Emails</th>
          </tr>
        </thead>
        <tbody id="emails"> 
          <% @email.each do |email| %>
              <%= render 'email', email: email %>
          <%end%>
        </tbody>
      </table>
    </div>
    <div class="col-md-8">
      <table class="table table-striped table-sm">
        <thead class="thead-dark">
          <tr>
            <th scope="col" class = 'text-left pl-3' style="width: 100%">My View</th>
          </tr>
        </thead>
        <tbody id="email_show">

          <%= render 'show', email: @email.first %>

        </tbody>
      </table>
    </div>
  </div>
</div>


    