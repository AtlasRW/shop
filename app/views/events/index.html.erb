<% Event.all.order(start_date: :asc).each do |event| %>
<section class="hero is-dark">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        <%= event.title %>
      </h1>
      <h2 class="subtitle">
        <%= event.location %>, <%= event.start_date.strftime("%d %m %Y") %>
      </h2>
      <h3>
        <%= event.description %>
      </h3>
    </div>
  </div>

  <div class="hero-foot">
    <nav class="tabs is-boxed is-fullwidth">
      <div class="container">
        <ul>
          <li>
            <%= link_to "Plus d'informations", event_path(event.id) %>
          </li>
        </ul>
      </div>
    </nav>
  </div>
</section>
<%end%>